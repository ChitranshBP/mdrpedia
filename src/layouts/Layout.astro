---
/**
 * MDRPedia ‚Äî Base Layout
 * Wraps all pages with global styles, meta, and navigation
 */

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const {
	title,
	description = "MDRPedia ‚Äî The Global Single-Source of Truth for Doctors & Surgeons",
	ogImage,
} = Astro.props;
const canonicalURL = new URL(
	Astro.url.pathname,
	Astro.site ?? "https://mdrpedia.com",
);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL.href} />
		{ogImage && <meta property="og:image" content={ogImage} />}

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />

		<link rel="canonical" href={canonicalURL.href} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<!-- Navigation -->
		<header class="site-header">
			<div class="container">
				<nav class="site-nav">
					<a href="/" class="site-logo">
						<span class="site-logo__icon">üèõÔ∏è</span>
						<span class="site-logo__text"
							>MDR<strong>Pedia</strong></span
						>
					</a>
					<div class="site-nav__links">
						<a href="/doctors" class="nav-link">Browse</a>
						<a href="/#search" class="nav-link">Search</a>
					</div>
				</nav>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<!-- Footer -->
		<footer class="site-footer">
			<div class="container">
				<div class="footer-content">
					<div class="footer-brand">
						<span class="site-logo__icon">üèõÔ∏è</span>
						<span>MDRPedia</span>
						<p class="footer-tagline">
							The Gold Standard for Medical Professional
							Verification
						</p>
					</div>
					<div class="footer-meta">
						<p>
							¬© {new Date().getFullYear()} MDRPedia. All data is verified
							through peer-reviewed sources.
						</p>
						<p class="footer-trust">
							Every fact is backed by a DOI-verified citation.
						</p>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(10, 10, 18, 0.85);
		backdrop-filter: blur(16px) saturate(180%);
		border-bottom: 1px solid var(--border-subtle);
	}

	.site-nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 64px;
	}

	.site-logo {
		display: flex;
		align-items: center;
		gap: var(--space-sm);
		text-decoration: none;
		color: var(--text-primary);
		font-size: 1.25rem;
		font-family: var(--font-serif);
	}

	.site-logo__icon {
		font-size: 1.5rem;
	}
	.site-logo__text strong {
		color: var(--accent-purple);
	}

	.site-nav__links {
		display: flex;
		gap: var(--space-lg);
	}

	.nav-link {
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--text-secondary);
		transition: color var(--transition-fast);
	}
	.nav-link:hover {
		color: var(--text-primary);
	}

	.site-footer {
		margin-top: var(--space-3xl);
		padding: var(--space-2xl) 0;
		border-top: 1px solid var(--border-subtle);
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: flex-end;
		gap: var(--space-xl);
		flex-wrap: wrap;
	}

	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: var(--space-xs);
		font-family: var(--font-serif);
		font-size: 1.1rem;
	}

	.footer-tagline {
		font-family: var(--font-sans);
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	.footer-meta {
		text-align: right;
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	.footer-trust {
		color: var(--accent-emerald);
		font-weight: 500;
		margin-top: var(--space-xs);
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			align-items: flex-start;
		}
		.footer-meta {
			text-align: left;
		}
	}
</style>
