---
/**
 * MDRPedia — Base Layout
 * Wraps all pages with global styles, meta, and navigation
 */
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
	tier?: string;
}

const {
	title,
	description = "MDRPedia — The Global Single-Source of Truth for Doctors & Surgeons",
	ogImage,
	tier,
} = Astro.props;
const canonicalURL = new URL(
	Astro.url.pathname,
	Astro.site ?? "https://mdrpedia.com",
);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL.href} />
		{ogImage && <meta property="og:image" content={ogImage} />}

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		{ogImage && <meta name="twitter:image" content={ogImage} />}
		<meta name="twitter:site" content="@mdrpedia" />

		<link rel="canonical" href={canonicalURL.href} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class={tier === "TITAN" ? "titan-theme" : ""}>
		<!-- Navigation -->
		<header class="site-header">
			<div class="container">
				<nav class="site-nav">
					<a href="/" class="site-logo">
						<span class="site-logo__icon"
							><svg
								width="20"
								height="20"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								><path
									d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6"
								></path></svg
							></span
						>
						<span class="site-logo__text"
							>MDR<strong>Pedia</strong></span
						>
					</a>
					<div class="site-nav__links">
						<a href="/doctors" class="nav-link">Browse</a>
						<a href="/rankings" class="nav-link">Rankings</a>
						<a href="/hospitals" class="nav-link">Hospitals</a>
						<a href="/prizes" class="nav-link">Awards</a>
						<a href="/communities" class="nav-link">Communities</a>
						<a href="/news" class="nav-link">News</a>
						<a href="/doctor/claim" class="nav-link nav-link--cta"
							>Claim Profile</a
						>
					</div>
				</nav>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<!-- Footer -->
		<footer class="site-footer">
			<div class="container">
				<div class="footer-content">
					<div class="footer-brand">
						<a href="/" class="site-logo">
							<span class="site-logo__icon"
								><svg
									width="20"
									height="20"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									><path
										d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6"
									></path></svg
								></span
							>
							<span class="site-logo__text"
								>MDR<strong>Pedia</strong></span
							>
						</a>
						<p class="footer-tagline">
							The Gold Standard for Medical Professional
							Verification. Quantifying the Unquantifiable.
						</p>
					</div>

					<div class="footer-links">
						<h4>Platform</h4>
						<a href="/about">About Us</a>
						<a href="/rankings">Rankings</a>
						<a href="/doctors">Browse Doctors</a>
						<a href="/communities">Communities</a>
					</div>

					<div class="footer-links">
						<h4>Legal & Support</h4>
						<a href="/privacy">Privacy Policy</a>
						<a href="/terms">Terms of Service</a>
						<a href="/contact">Contact Support</a>
						<a href="/doctor/claim">Claim Profile</a>
					</div>

					<div class="footer-meta">
						<p>
							© {new Date().getFullYear()} MDRPedia. All data is verified
							through peer-reviewed sources.
						</p>
						<p class="footer-trust">
							Every fact is backed by a DOI-verified citation.
						</p>
						<div style="margin-top: 1rem; opacity: 0.5;">
							<a
								href="/login"
								style="color: inherit; text-decoration: none; font-size: 0.75rem;"
								>Admin Login</a
							>
						</div>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* Global styles move to frontmatter import */
</style>

<style>
	.site-header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(10, 10, 18, 0.85);
		backdrop-filter: blur(16px) saturate(180%);
		border-bottom: 1px solid var(--border-subtle);
	}

	.site-nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 64px;
	}

	.site-logo {
		display: flex;
		align-items: center;
		gap: var(--space-sm);
		text-decoration: none;
		color: var(--text-primary);
		font-size: 1.25rem;
		font-family: var(--font-serif);
	}

	.site-logo__icon {
		font-size: 1.5rem;
	}
	.site-logo__text strong {
		color: var(--accent-purple);
	}

	.site-nav__links {
		display: flex;
		gap: var(--space-lg);
	}

	.nav-link {
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--text-secondary);
		transition: color var(--transition-fast);
	}
	.nav-link:hover {
		color: var(--text-primary);
	}
	.nav-link--cta {
		color: var(--accent-purple);
		font-weight: 600;
	}
	.nav-link--cta:hover {
		color: var(--accent-purple-light, #a78bfa);
	}

	.site-footer {
		margin-top: var(--space-3xl);
		padding: var(--space-2xl) 0;
		border-top: 1px solid var(--border-subtle);
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: flex-end;
		gap: var(--space-xl);
		flex-wrap: wrap;
	}

	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: var(--space-xs);
		font-family: var(--font-serif);
		font-size: 1.1rem;
	}

	.footer-tagline {
		font-family: var(--font-sans);
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	.footer-meta {
		text-align: right;
		font-size: 0.8rem;
		color: var(--text-muted);
	}

	.footer-trust {
		color: var(--accent-emerald);
		font-weight: 500;
		margin-top: var(--space-xs);
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--space-lg);
		}
		.footer-meta {
			text-align: left;
			margin-top: var(--space-md);
		}
	}

	.footer-links {
		display: flex;
		flex-direction: column;
		gap: var(--space-xs);
	}

	.footer-links h4 {
		font-size: 0.9rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: var(--space-xs);
	}

	.footer-links a {
		font-size: 0.85rem;
		color: var(--text-secondary);
		text-decoration: none;
		transition: color var(--transition-fast);
	}

	.footer-links a:hover {
		color: var(--accent-purple);
	}
</style>
