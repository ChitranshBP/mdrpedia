---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 â€” Page Not Found | MDRPedia">
    <div
        class="container flex flex-col items-center justify-center min-h-[60vh] text-center py-20"
    >
        <div class="mb-8 relative">
            <svg
                class="w-32 h-32 text-white/10"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1"
            >
                <path
                    d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"
                ></path>
                <line x1="12" y1="9" x2="12" y2="13"></line>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
            <div class="absolute inset-0 flex items-center justify-center">
                <span class="text-5xl font-bold text-accent-gold">404</span>
            </div>
        </div>

        <h1 class="text-4xl font-bold text-white mb-4">Page Not Found</h1>
        <p class="text-xl text-gray-400 max-w-lg mx-auto mb-8">
            The profile or page you are looking for might have been moved,
            renamed, or is pending verification.
        </p>

        <div class="flex gap-4">
            <a href="/" class="btn btn--primary">Return Home</a>
            <a href="/doctors" class="btn btn--secondary">Browse Doctors</a>
        </div>

        <div
            class="mt-12 p-6 bg-white/5 border border-white/10 rounded-xl max-w-md w-full"
        >
            <h3 class="text-lg font-semibold text-white mb-2">
                Looking for a specific doctor?
            </h3>
            <form action="/doctors" method="get" class="flex gap-2">
                <input
                    type="text"
                    name="q"
                    placeholder="Search by name or specialty..."
                    class="flex-1 bg-black/30 border border-white/20 rounded-lg px-4 py-2 text-white focus:border-accent-blue outline-none transition-colors"
                />
                <button
                    type="submit"
                    class="bg-accent-blue text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-600 transition-colors"
                >
                    Search
                </button>
            </form>
        </div>
    </div>
</Layout>
