---
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Contact Support â€” MDRPedia"
    description="Contact MDRPedia support for assistance."
>
    <div class="container page-content">
        <header class="page-header">
            <h1>Contact Support</h1>
            <p class="subtitle">
                We're here to help. Reach out to our team for assistance.
            </p>
        </header>

        <div class="contact-grid">
            <!-- Contact Card -->
            <div class="card contact-card">
                <div class="icon-wrapper">
                    <svg
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                            d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                        ></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                </div>
                <h3>Email Support</h3>
                <p>
                    For general inquiries, profile claims, and technical
                    support.
                </p>
                <a href="mailto:support@mdrpedia.com" class="btn btn--primary"
                    >support@mdrpedia.com</a
                >
            </div>

            <!-- Verification Card -->
            <div class="card contact-card">
                <div class="icon-wrapper">
                    <svg
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                </div>
                <h3>Profile Verification</h3>
                <p>
                    Are you a doctor? Claim your profile to manage your
                    presence.
                </p>
                <a href="/doctor/claim" class="btn btn--outline"
                    >Verify Profile</a
                >
            </div>

            <!-- Removal Card -->
            <div class="card contact-card">
                <div class="icon-wrapper">
                    <svg
                        width="32"
                        height="32"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"
                        ></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                </div>
                <h3>Data Privacy</h3>
                <p>Request data removal or update your privacy settings.</p>
                <a href="mailto:privacy@mdrpedia.com" class="btn btn--outline"
                    >Privacy Team</a
                >
            </div>
        </div>
    </div>
</Layout>

<style>
    .page-content {
        padding-top: var(--space-3xl);
        padding-bottom: var(--space-3xl);
    }

    .page-header {
        margin-bottom: var(--space-3xl);
        text-align: center;
    }

    .subtitle {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-top: var(--space-sm);
    }

    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-xl);
        max-width: var(--max-width);
        margin: 0 auto;
    }

    .contact-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: var(--space-2xl);
    }

    .icon-wrapper {
        width: 64px;
        height: 64px;
        background: rgba(139, 92, 246, 0.1);
        color: var(--accent-purple);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: var(--space-lg);
    }

    .contact-card h3 {
        color: var(--text-primary);
        margin-bottom: var(--space-sm);
    }

    .contact-card p {
        color: var(--text-secondary);
        margin-bottom: var(--space-lg);
        flex-grow: 1;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }
</style>
