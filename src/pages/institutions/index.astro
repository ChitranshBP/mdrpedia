    }

    .inst-desc {
        font-size: 0.85rem;
        color: var(--text-secondary);
        line-height: 1.5;
        margin-bottom: 16px;
    }

    .doctor-stats {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }

    .stat-item {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .stat-item strong {
        color: var(--text-primary);
    }

    .tier-stat {
        padding: 2px 8px;
        border-radius: 4px;
    }

    .tier-titan {
        background: rgba(255, 215, 0, 0.1);
        color: #ffd700;
    }

    .tier-elite {
        background: rgba(0, 170, 255, 0.1);
        color: #00aaff;
    }

    .card-footer {
        padding: 16px 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
        background: rgba(255, 255, 255, 0.02);
    }

    .view-link {
        font-size: 0.85rem;
        color: var(--accent-purple);
        font-weight: 600;
    }

    .empty-state {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 20px;
        color: var(--text-muted);
    }

    .empty-state p {
        margin-bottom: 20px;
    }

    @media (max-width: 768px) {
        .filters-bar {
            flex-direction: column;
            align-items: stretch;
        }

        .search-form {
            width: 100%;
        }

        .institutions-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
