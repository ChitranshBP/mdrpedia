        flex: 1;
    }

    .inst-meta {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 12px;
    }

    .sector-badge {
        padding: 3px 10px;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .sector-public {
        background: rgba(16, 185, 129, 0.15);
        color: #10b981;
    }

    .sector-private {
