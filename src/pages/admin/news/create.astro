---
/**
 * MDRPedia — Create News Article
 */
import Layout from "../../../layouts/Layout.astro";
import { requireSuperAdmin } from "../../../lib/rbac";

export const prerender = false;

if (!requireSuperAdmin(Astro.request)) {
    return Astro.redirect("/login");
}

const adminKey = new URL(Astro.request.url).searchParams.get("key");

const categories = [
    "Policy",
    "Research",
    "Technology",
    "Awards",
    "Appointments",
    "Global Health",
    "Innovation",
    "Clinical Trials"
];
---

<Layout title="Create News Article — MDRPedia Admin">
    <div class="container admin-dashboard">
        <header class="admin-header">
            <div class="admin-header__top">
                <span class="badge badge--admin">SUPER ADMIN</span>
                <h1>Create News Article</h1>
            </div>
            <div class="admin-actions">
                <a href={`/admin/news?key=${adminKey}`} class="btn btn--outline">
                    &larr; Back to News
                </a>
            </div>
        </header>

        <form id="newsForm" class="editor-form">
            <div class="form-grid">
                <div class="form-group full-width">
                    <label for="title">Title *</label>
                    <input type="text" id="title" name="title" required placeholder="Enter article title" />
                </div>

                <div class="form-group full-width">
                    <label for="summary">Summary *</label>
                    <textarea id="summary" name="summary" required rows="3" placeholder="Brief summary of the article"></textarea>
                </div>

                <div class="form-group">
                    <label for="category">Category *</label>
                    <select id="category" name="category" required>
                        <option value="">Select category...</option>
                        {categories.map(cat => (
                            <option value={cat}>{cat}</option>
                        ))}
                    </select>
                </div>

                <div class="form-group">
                    <label for="date">Date *</label>
                    <input type="date" id="date" name="date" required />
                </div>

                <div class="form-group">
                    <label for="source">Source *</label>
                    <input type="text" id="source" name="source" required placeholder="e.g., WHO, NIH, Reuters" />
                </div>

                <div class="form-group">
                    <label for="url">Source URL</label>
                    <input type="url" id="url" name="url" placeholder="https://..." />
                </div>

                <div class="form-group full-width">
                    <label for="content">Full Content</label>
                    <textarea id="content" name="content" rows="12" placeholder="Full article content (Markdown supported)"></textarea>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn--primary btn--lg">
                    Create Article
                </button>
                <button type="button" class="btn btn--outline" onclick="previewArticle()">
                    Preview
                </button>
            </div>
        </form>

        <!-- Preview Modal -->
        <div id="previewModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Preview</h2>
                    <button class="close-btn" onclick="closePreview()">&times;</button>
                </div>
                <div class="modal-body">
                    <article id="previewContent"></article>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script define:vars={{ adminKey }}>
    // Set default date to today
    document.getElementById('date').value = new Date().toISOString().split('T')[0];

    // Form submission
    document.getElementById('newsForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const form = e.target;
        const data = {
            title: form.title.value,
            summary: form.summary.value,
            category: form.category.value,
            date: form.date.value,
            source: form.source.value,
            url: form.url.value || '#',
            content: form.content.value || `Detailed information about "${form.title.value}" will be expanded soon.`
        };

        const res = await fetch(`/api/admin/news?key=${adminKey}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });

        if (res.ok) {
            const result = await res.json();
            alert('Article created successfully!');
            window.location.href = `/admin/news?key=${adminKey}`;
        } else {
            const error = await res.json();
            alert(`Error: ${error.message || 'Failed to create article'}`);
        }
    });

    // Preview
    window.previewArticle = function() {
        const form = document.getElementById('newsForm');
        const preview = document.getElementById('previewContent');

        preview.innerHTML = `
            <div class="preview-meta">
                <span class="preview-category">${form.category.value || 'Category'}</span>
                <span class="preview-date">${form.date.value || 'Date'}</span>
            </div>
            <h1>${form.title.value || 'Untitled'}</h1>
            <p class="preview-summary">${form.summary.value || 'Summary...'}</p>
            <hr />
            <div class="preview-body">${form.content.value || 'No content yet.'}</div>
            <p class="preview-source">Source: ${form.source.value || 'Unknown'}</p>
        `;

        document.getElementById('previewModal').style.display = 'flex';
    };

    window.closePreview = function() {
        document.getElementById('previewModal').style.display = 'none';
    };
</script>

<style>
    .admin-dashboard {
        padding: 40px 20px;
        max-width: 900px;
        color: var(--text-primary);
    }

    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
    }

    .admin-header__top {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .badge--admin {
        background: #ffd700;
        color: #000;
        font-weight: 700;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        align-self: flex-start;
    }

    h1 {
        font-family: var(--font-serif);
        font-size: 2rem;
        margin: 0;
    }

    /* Form */
    .editor-form {
        background: var(--bg-card, #14142a);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        padding: 32px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .form-group.full-width {
        grid-column: span 2;
    }

    label {
        font-weight: 600;
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    input, textarea, select {
        padding: 12px 16px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        color: var(--text-primary);
        font-size: 0.95rem;
        font-family: inherit;
    }

    input:focus, textarea:focus, select:focus {
        outline: none;
        border-color: var(--accent-purple);
        box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
    }

    textarea {
        resize: vertical;
        min-height: 100px;
    }

    select {
        cursor: pointer;
    }

    .form-actions {
        display: flex;
        gap: 16px;
        margin-top: 32px;
        padding-top: 24px;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    /* Buttons */
    .btn {
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 10px 16px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
    }

    .btn--primary {
        background: #8b5cf6;
        color: white;
    }

    .btn--outline {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--text-primary);
    }

    .btn--lg {
        padding: 14px 28px;
        font-size: 1rem;
    }

    /* Modal */
    .modal {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        align-items: center;
        justify-content: center;
        z-index: 1000;
        padding: 20px;
    }

    .modal-content {
        background: var(--bg-card);
        border-radius: 12px;
        max-width: 700px;
        width: 100%;
        max-height: 80vh;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 24px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .modal-header h2 {
        margin: 0;
        font-size: 1.2rem;
    }

    .close-btn {
        background: none;
        border: none;
        color: var(--text-muted);
        font-size: 1.5rem;
        cursor: pointer;
    }

    .modal-body {
        padding: 24px;
        overflow-y: auto;
    }

    /* Preview Styles */
    .preview-meta {
        display: flex;
        gap: 16px;
        margin-bottom: 16px;
    }

    .preview-category {
        background: rgba(139, 92, 246, 0.2);
        color: var(--accent-purple);
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .preview-date {
        color: var(--text-muted);
        font-size: 0.85rem;
    }

    .preview-summary {
        font-size: 1.1rem;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .preview-body {
        line-height: 1.7;
    }

    .preview-source {
        margin-top: 24px;
        padding-top: 16px;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
        color: var(--text-muted);
        font-size: 0.85rem;
    }

    @media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-group.full-width {
            grid-column: span 1;
        }
    }
</style>
