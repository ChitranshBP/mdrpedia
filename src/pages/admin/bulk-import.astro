                                    <td>{job.fileName}</td>
                                    <td>
                                        <span class={`status-badge status-badge--${job.status.toLowerCase()}`}>
                                            {job.status}
                                        </span>
                                    </td>
                                    <td class="text-green">{job.successCount}</td>
                                    <td class="text-red">{job.errorCount}</td>
                                    <td class="text-muted">{new Date(job.createdAt).toLocaleDateString()}</td>
                                </tr>
                            ))}
                        </tbody>
                    </table>
                </div>
            )}
        </main>
    </div>
</Layout>

<script define:vars={{ adminKey }}>
    let csvData = [];
    let headers = [];

    const uploadZone = document.getElementById('uploadZone');
    const csvFileInput = document.getElementById('csvFile');
    const fileInfo = document.getElementById('fileInfo');
    const previewSection = document.getElementById('previewSection');
    const progressSection = document.getElementById('progressSection');

    // Drag and drop handlers
    uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadZone.classList.add('dragover');
    });

    uploadZone.addEventListener('dragleave', () => {
        uploadZone.classList.remove('dragover');
    });

    uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadZone.classList.remove('dragover');
        const file = e.dataTransfer.files[0];
        if (file) handleFile(file);
    });

    csvFileInput.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) handleFile(file);
    });

    function handleFile(file) {
        if (!file.name.match(/\.(csv|tsv)$/i)) {
            alert('Please upload a CSV or TSV file');
            return;
        }

        // Show file info
        fileInfo.hidden = false;
        fileInfo.querySelector('.file-info__name').textContent = file.name;
        fileInfo.querySelector('.file-info__size').textContent = formatFileSize(file.size);
        uploadZone.hidden = true;

        // Parse CSV
        const reader = new FileReader();
        reader.onload = (e) => {
            const text = e.target.result;
            const delimiter = file.name.endsWith('.tsv') ? '\t' : ',';
            parseCSV(text, delimiter);
        };
        reader.readAsText(file);
    }

    function parseCSV(text, delimiter) {
        const lines = text.trim().split('\n');
        headers = lines[0].split(delimiter).map(h => h.trim().replace(/^"|"$/g, ''));

        csvData = [];
        for (let i = 1; i < lines.length; i++) {
            const values = parseCSVLine(lines[i], delimiter);
            if (values.length === headers.length) {
                const row = {};
                headers.forEach((header, j) => {
                    row[header] = values[j];
                });
                csvData.push(row);
            }
        }

        showPreview();
    }

    function parseCSVLine(line, delimiter) {
        const result = [];
        let current = '';
        let inQuotes = false;

        for (let i = 0; i < line.length; i++) {
            const char = line[i];
            if (char === '"') {
                inQuotes = !inQuotes;
            } else if (char === delimiter && !inQuotes) {
                result.push(current.trim());
                current = '';
            } else {
                current += char;
            }
        }
        result.push(current.trim());
        return result;
    }

    function showPreview() {
        previewSection.hidden = false;

        const thead = document.querySelector('#previewTable thead');
        const tbody = document.querySelector('#previewTable tbody');

        // Headers
        thead.innerHTML = '<tr>' + headers.map(h => `<th>${h}</th>`).join('') + '</tr>';

        // First 5 rows
        tbody.innerHTML = csvData.slice(0, 5).map(row =>
            '<tr>' + headers.map(h => `<td>${row[h] || '-'}</td>`).join('') + '</tr>'
        ).join('');

        document.getElementById('importCount').textContent = `${csvData.length} rows to import`;
    }

    window.clearFile = function() {
        csvData = [];
        headers = [];
        csvFileInput.value = '';
        fileInfo.hidden = true;
        previewSection.hidden = true;
        uploadZone.hidden = false;
    };

    // Import handler
    document.getElementById('importBtn')?.addEventListener('click', async () => {
        if (csvData.length === 0) return;

        previewSection.hidden = true;
        progressSection.hidden = false;

        const progressFill = document.getElementById('progressFill');
        const progressText = document.getElementById('progressText');
        const progressPercent = document.getElementById('progressPercent');
        const importLog = document.getElementById('importLog');

        let success = 0;
        let errors = 0;
        const skipDuplicates = document.getElementById('skipDuplicates').checked;

        for (let i = 0; i < csvData.length; i++) {
            const row = csvData[i];
            const percent = Math.round(((i + 1) / csvData.length) * 100);
            progressFill.style.width = percent + '%';
            progressPercent.textContent = percent + '%';
            progressText.textContent = `Importing ${row.fullName || 'Row ' + (i + 1)}...`;

            try {
                const res = await fetch('/api/admin/bulk-import', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'x-admin-key': adminKey
                    },
                    body: JSON.stringify({
                        profile: row,
                        skipDuplicates
                    })
                });

                const data = await res.json();
                if (data.success) {
                    success++;
                    importLog.innerHTML += `<div class="log-line log-line--success">✓ ${row.fullName}</div>`;
                } else {
                    errors++;
                    importLog.innerHTML += `<div class="log-line log-line--error">✗ ${row.fullName}: ${data.error}</div>`;
                }
            } catch (e) {
                errors++;
                importLog.innerHTML += `<div class="log-line log-line--error">✗ ${row.fullName}: ${e.message}</div>`;
            }

            importLog.scrollTop = importLog.scrollHeight;
        }

        progressText.textContent = `Complete! ${success} imported, ${errors} errors`;
    });

    function formatFileSize(bytes) {
        if (bytes < 1024) return bytes + ' B';
        if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
        return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
    }

    // Download template handler
    document.getElementById('downloadTemplateBtn')?.addEventListener('click', async () => {
        try {
            const res = await fetch('/api/admin/bulk-template', {
                method: 'GET',
                headers: {
                    'x-admin-key': adminKey
                }
            });

            if (!res.ok) {
                alert('Failed to download template');
                return;
            }

            const blob = await res.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'mdrpedia-bulk-import-template.csv';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        } catch (e) {
            alert('Error downloading template: ' + e.message);
        }
    });
</script>

