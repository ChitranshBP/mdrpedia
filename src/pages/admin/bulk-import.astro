---
/**
 * MDRPedia — Bulk Import Doctors
 * Upload CSV to import multiple doctors at once
 */
import Layout from "../../layouts/Layout.astro";
import { prisma } from "../../lib/prisma";
import { requireSuperAdmin } from "../../lib/rbac";

export const prerender = false;

if (!requireSuperAdmin(Astro.request)) {
    return Astro.redirect("/login");
}

const url = new URL(Astro.request.url);
const adminKey = url.searchParams.get("key") || "";

// Fetch recent import jobs
let recentJobs: any[] = [];
try {
    recentJobs = await prisma.bulkImportJob.findMany({
        orderBy: { createdAt: 'desc' },
        take: 10
    });
} catch {
    // Table might not exist yet - silent fallback
}
