    }

    h1 {
        font-family: var(--font-serif);
        font-size: 2rem;
        margin: 0;
    }

    h2 {
        font-size: 1.2rem;
        margin-bottom: 16px;
        color: var(--text-secondary);
    }

    .section {
        margin-bottom: 48px;
    }

    .alert {
        padding: 12px 16px;
        border-radius: 6px;
        margin-bottom: 24px;
    }

    .success {
        background: rgba(16, 185, 129, 0.15);
        color: #10b981;
        border: 1px solid #10b981;
    }

    .error {
        background: rgba(239, 68, 68, 0.15);
        color: #ef4444;
        border: 1px solid #ef4444;
    }

    .table-container {
        background: var(--bg-card, #14142a);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 12px;
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 800px;
    }

    .admin-table th,
    .admin-table td {
        padding: 14px 16px;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    .admin-table th {
        background: rgba(255, 255, 255, 0.03);
        font-weight: 600;
        color: var(--text-secondary);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .profile-link {
        font-family: monospace;
        color: var(--accent-purple);
    }

    code {
        background: rgba(139, 92, 246, 0.1);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.85rem;
        color: var(--accent-purple);
    }

    .value-cell {
        max-width: 200px;
    }

    .value-preview {
        max-height: 60px;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 0.85rem;
        padding: 6px;
        border-radius: 4px;
    }

    .value-preview.old {
        background: rgba(239, 68, 68, 0.1);
        color: #f87171;
    }

    .value-preview.new {
        background: rgba(34, 197, 94, 0.1);
        color: #4ade80;
    }

    .contributor {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .contributor small {
        color: var(--text-muted);
        font-size: 0.8rem;
    }

    .action-form {
        display: flex;
        gap: 8px;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-badge.approved {
        background: rgba(34, 197, 94, 0.15);
        color: #22c55e;
    }

    .status-badge.rejected {
        background: rgba(239, 68, 68, 0.15);
        color: #ef4444;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
