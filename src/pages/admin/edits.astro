---
/**
 * MDRPedia — Admin Edits Page
 * Review and manage pending profile edit suggestions
 */
import Layout from "../../layouts/Layout.astro";
import { prisma } from "../../lib/prisma";
import { requireSuperAdmin } from "../../lib/rbac";

export const prerender = false;

if (!import.meta.env.ADMIN_ACCESS_KEY) {
    return new Response("ADMIN_ACCESS_KEY not configured", { status: 500 });
}

if (!requireSuperAdmin(Astro.request)) {
    return Astro.redirect("/login");
}

const url = new URL(Astro.request.url);
const adminKey = url.searchParams.get("key");

let successMsg = "";
let errorMsg = "";

// Handle POST actions (approve/reject)
if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const editId = formData.get("edit_id")?.toString();
        const action = formData.get("action")?.toString();

        if (editId && action) {
            if (action === "approve") {
                await prisma.profileEdit.update({
                    where: { id: editId },
                    data: {
                        status: "APPROVED",
                        reviewed_by: "Super Admin",
                        reviewed_at: new Date(),
                    },
                });
                successMsg = "Edit approved successfully.";
            } else if (action === "reject") {
                await prisma.profileEdit.update({
                    where: { id: editId },
                    data: {
                        status: "REJECTED",
                        reviewed_by: "Super Admin",
                        reviewed_at: new Date(),
                    },
                });
                successMsg = "Edit rejected.";
            }
        }
    } catch (e: unknown) {
        errorMsg = e instanceof Error ? e.message : "Action failed";
    }
}

// Fetch pending edits
const pendingEdits = await prisma.profileEdit.findMany({
    where: { status: "PENDING" },
    orderBy: { createdAt: "desc" },
});

// Fetch recently reviewed edits
const reviewedEdits = await prisma.profileEdit.findMany({
    where: { status: { not: "PENDING" } },
    orderBy: { reviewed_at: "desc" },
    take: 20,
});
---

<Layout title="Pending Edits — MDRPedia Admin">
    <div class="container admin-dashboard">
        <header class="admin-header">
            <div class="admin-header__top">
                <span class="badge badge--admin">SUPER ADMIN</span>
                <h1>Pending Edits</h1>
            </div>
            <div class="admin-actions">
                <a href={`/admin?key=${adminKey}`} class="btn btn--outline">
                    &larr; Dashboard
                </a>
            </div>
        </header>

        {successMsg && <div class="alert success">{successMsg}</div>}
        {errorMsg && <div class="alert error">{errorMsg}</div>}

        <section class="section">
            <h2>Pending Review ({pendingEdits.length})</h2>
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Profile</th>
                            <th>Field</th>
                            <th>Old Value</th>
                            <th>New Value</th>
                            <th>Contributor</th>
                            <th>Submitted</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {pendingEdits.length > 0 ? (
                            pendingEdits.map((edit) => (
                                <tr>
                                    <td>
                                        <a href={`/doctors/${edit.profile_slug}`} target="_blank" class="profile-link">
                                            {edit.profile_slug}
                                        </a>
                                    </td>
                                    <td><code>{edit.field_name}</code></td>
                                    <td class="value-cell">
                                        <div class="value-preview old">{edit.old_value || "—"}</div>
                                    </td>
                                    <td class="value-cell">
                                        <div class="value-preview new">{edit.new_value}</div>
                                    </td>
                                    <td>
                                        <div class="contributor">
                                            <span>{edit.contributor_name}</span>
                                            <small>{edit.contributor_email}</small>
                                        </div>
                                    </td>
                                    <td>{edit.createdAt.toLocaleDateString()}</td>
                                    <td>
                                        <form method="POST" class="action-form">
                                            <input type="hidden" name="edit_id" value={edit.id} />
                                            <button type="submit" name="action" value="approve" class="btn btn--sm btn--success">
                                                Approve
                                            </button>
                                            <button type="submit" name="action" value="reject" class="btn btn--sm btn--danger">
                                                Reject
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            ))
                        ) : (
                            <tr>
                                <td colspan="7" class="empty-state">
                                    No pending edits.
                                </td>
                            </tr>
                        )}
                    </tbody>
                </table>
            </div>
        </section>

        <section class="section">
            <h2>Recently Reviewed</h2>
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Profile</th>
                            <th>Field</th>
                            <th>Status</th>
                            <th>Reviewed By</th>
                            <th>Reviewed At</th>
                        </tr>
                    </thead>
                    <tbody>
                        {reviewedEdits.length > 0 ? (
                            reviewedEdits.map((edit) => (
                                <tr>
                                    <td>
                                        <a href={`/doctors/${edit.profile_slug}`} target="_blank" class="profile-link">
                                            {edit.profile_slug}
                                        </a>
                                    </td>
                                    <td><code>{edit.field_name}</code></td>
                                    <td>
                                        <span class={`status-badge ${edit.status.toLowerCase()}`}>
                                            {edit.status}
                                        </span>
                                    </td>
                                    <td>{edit.reviewed_by || "—"}</td>
                                    <td>{edit.reviewed_at?.toLocaleDateString() || "—"}</td>
                                </tr>
                            ))
                        ) : (
                            <tr>
                                <td colspan="5" class="empty-state">
                                    No reviewed edits yet.
                                </td>
                            </tr>
                        )}
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</Layout>

<style>
