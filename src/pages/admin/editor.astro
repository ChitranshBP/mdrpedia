---
import Layout from "../../layouts/Layout.astro";
import LineageMapper from "../../components/LineageMapper";

// Mock Admin Check
const isAdmin = true;
---

<Layout title="Editor Workspace â€” MDRPedia">
    <div class="min-h-screen pt-24 pb-20 container">
        <header class="mb-12">
            <h1 class="text-3xl font-bold text-white mb-2">Editor Workspace</h1>
            <p class="text-gray-400">
                Manage global knowledge graph relations.
            </p>
        </header>

        <div class="max-w-4xl mx-auto">
            <LineageMapper client:load />
        </div>

        <div
            class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto"
        >
            <div class="p-6 bg-white/5 border border-white/10 rounded-xl">
                <h3 class="text-white font-bold mb-2">Pending Verifications</h3>
                <p class="text-gray-500 text-sm mb-4">
                    3 doctors claimed their profile today.
                </p>
                <button
                    class="bg-white/10 text-white px-4 py-2 rounded hover:bg-white/20 text-sm"
                    >Review Queue</button
                >
            </div>
            <div class="p-6 bg-white/5 border border-white/10 rounded-xl">
                <h3 class="text-white font-bold mb-2">Conflict Resolution</h3>
                <p class="text-gray-500 text-sm mb-4">
                    2 conflicting birth dates reported for Dr. DeBakey.
                </p>
                <button
                    class="bg-white/10 text-white px-4 py-2 rounded hover:bg-white/20 text-sm"
                    >Resolve</button
                >
            </div>
        </div>
    </div>
</Layout>
