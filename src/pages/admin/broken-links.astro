---
/**
 * MDRPedia — Broken Links Report
 * View and manage 404 errors
 */
import Layout from "../../layouts/Layout.astro";
import { prisma } from "../../lib/prisma";
import { requireSuperAdmin } from "../../lib/rbac";

export const prerender = false;

if (!requireSuperAdmin(Astro.request)) {
    return Astro.redirect("/login");
}

const url = new URL(Astro.request.url);
const adminKey = url.searchParams.get("key") || "";
const showResolved = url.searchParams.get("resolved") === "true";
const page = parseInt(url.searchParams.get("page") || "1");
const pageSize = 50;

// Build where clause
const whereClause: any = {
    resolved: showResolved
};

// Fetch 404 logs grouped by URL
let logs: any[] = [];
let totalLogs = 0;
let urlStats: any[] = [];

try {
    [logs, totalLogs] = await Promise.all([
        prisma.notFoundLog.findMany({
            where: whereClause,
            orderBy: { createdAt: 'desc' },
            skip: (page - 1) * pageSize,
            take: pageSize,
        }),
        prisma.notFoundLog.count({ where: whereClause })
    ]);

    // Get top URLs by frequency (last 30 days)
    const thirtyDaysAgo = new Date();
    thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);

    urlStats = await prisma.notFoundLog.groupBy({
        by: ['url'],
        where: {
            resolved: false,
            is_bot: false,
            createdAt: { gte: thirtyDaysAgo }
        },
        _count: { url: true },
        orderBy: { _count: { url: 'desc' } },
        take: 20
    });
} catch (e) {
    console.error("Broken links error:", e);
}

const totalPages = Math.ceil(totalLogs / pageSize);

// Handle POST for marking resolved
if (Astro.request.method === 'POST') {
    const formData = await Astro.request.formData();
    const action = formData.get('action');
    const targetUrl = formData.get('url');

    if (action === 'resolve' && targetUrl) {
        await prisma.notFoundLog.updateMany({
            where: { url: targetUrl as string },
            data: { resolved: true }
        });
        return Astro.redirect(`/admin/broken-links?key=${adminKey}`);
    }
}
---

<Layout title="Broken Links — Admin">
    <div class="admin-page">
        <aside class="sidebar">
            <div class="sidebar__brand">
                <a href={`/admin?key=${adminKey}`} class="brand-link">
                    <div class="brand-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6"/>
                        </svg>
                    </div>
                    <span>MDRPedia</span>
                </a>
            </div>
            <nav class="sidebar__nav">
                <a href={`/admin?key=${adminKey}`} class="nav-item">Dashboard</a>
                <a href={`/admin/doctors?key=${adminKey}`} class="nav-item">All Doctors</a>
                <a href={`/admin/analytics?key=${adminKey}`} class="nav-item">Analytics</a>
                <a href={`/admin/audit-log?key=${adminKey}`} class="nav-item">Activity Log</a>
                <a href={`/admin/data-quality?key=${adminKey}`} class="nav-item">Data Quality</a>
                <a href={`/admin/bulk-import?key=${adminKey}`} class="nav-item">Bulk Import</a>
                <a href={`/admin/broken-links?key=${adminKey}`} class="nav-item active">Broken Links</a>
            </nav>
        </aside>

        <main class="main-content">
            <header class="page-header">
                <div>
                    <h1>Broken Links Report</h1>
                    <p>Track and resolve 404 errors</p>
                </div>
                <div class="header-stats">
                    <div class="stat">
                        <span class="stat-value">{totalLogs.toLocaleString()}</span>
                        <span class="stat-label">{showResolved ? 'Resolved' : 'Active'} 404s</span>
                    </div>
                </div>
            </header>

            <!-- Filters -->
            <div class="filters-bar">
                <div class="filter-tabs">
                    <a href={`/admin/broken-links?key=${adminKey}`}
                       class={`filter-tab ${!showResolved ? 'active' : ''}`}>
                        Active Issues
                    </a>
                    <a href={`/admin/broken-links?key=${adminKey}&resolved=true`}
                       class={`filter-tab ${showResolved ? 'active' : ''}`}>
                        Resolved
                    </a>
                </div>
            </div>

            <!-- Top Broken URLs -->
            {!showResolved && urlStats.length > 0 && (
                <div class="card">
                    <h2>Most Frequent 404s (Last 30 Days)</h2>
                    <p class="help-text">Human traffic only, bots excluded</p>
                    <div class="url-list">
                        {urlStats.map((stat, i) => (
                            <div class="url-item">
                                <span class="url-rank">{i + 1}</span>
                                <span class="url-path" title={stat.url}>
                                    {stat.url.length > 60 ? stat.url.slice(0, 60) + '...' : stat.url}
                                </span>
                                <span class="url-count">{stat._count.url} hits</span>
                                <form method="POST" style="display: inline;">
                                    <input type="hidden" name="action" value="resolve" />
                                    <input type="hidden" name="url" value={stat.url} />
                                    <button type="submit" class="btn btn--sm btn--outline">
                                        Mark Resolved
                                    </button>
                                </form>
                            </div>
                        ))}
                    </div>
                </div>
            )}

            <!-- Logs Table -->
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>URL</th>
                            <th>Referrer</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {logs.length > 0 ? (
                            logs.map((log) => (
                                <tr class={log.is_bot ? 'row-bot' : ''}>
                                    <td class="cell-time">
                                        <span class="time-date">{new Date(log.createdAt).toLocaleDateString()}</span>
                                        <span class="time-hour">{new Date(log.createdAt).toLocaleTimeString()}</span>
                                    </td>
                                    <td class="cell-url">
                                        <code title={log.url}>
                                            {log.url.length > 50 ? log.url.slice(0, 50) + '...' : log.url}
                                        </code>
                                    </td>
                                    <td class="cell-referrer">
                                        {log.referrer ? (
                                            <a href={log.referrer} target="_blank" rel="noopener">
                                                {new URL(log.referrer).hostname}
                                            </a>
                                        ) : (
                                            <span class="text-muted">Direct</span>
                                        )}
                                    </td>
                                    <td>
                                        <span class={`type-badge ${log.is_bot ? 'type-badge--bot' : 'type-badge--human'}`}>
                                            {log.is_bot ? 'Bot' : 'Human'}
                                        </span>
                                    </td>
                                    <td>
                                        {!log.resolved && (
                                            <form method="POST" style="display: inline;">
                                                <input type="hidden" name="action" value="resolve" />
                                                <input type="hidden" name="url" value={log.url} />
                                                <button type="submit" class="btn-icon" title="Mark Resolved">
                                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="14" height="14">
                                                        <polyline points="20 6 9 17 4 12"/>
                                                    </svg>
                                                </button>
                                            </form>
                                        )}
                                    </td>
                                </tr>
                            ))
                        ) : (
                            <tr>
                                <td colspan="5" class="empty-state">
                                    <p>No {showResolved ? 'resolved' : 'active'} 404 errors found</p>
                                </td>
                            </tr>
                        )}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {totalPages > 1 && (
                <div class="pagination">
                    {page > 1 && (
                        <a href={`/admin/broken-links?key=${adminKey}&page=${page - 1}${showResolved ? '&resolved=true' : ''}`}
                           class="btn btn--outline btn--sm">
                            &larr; Previous
                        </a>
                    )}
                    <span class="pagination-info">
                        Page {page} of {totalPages}
                    </span>
                    {page < totalPages && (
                        <a href={`/admin/broken-links?key=${adminKey}&page=${page + 1}${showResolved ? '&resolved=true' : ''}`}
                           class="btn btn--outline btn--sm">
                            Next &rarr;
                        </a>
                    )}
                </div>
            )}
        </main>
    </div>
</Layout>

