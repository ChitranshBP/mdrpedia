---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import TierBadge from "../components/TierBadge.astro";
import { getSignedImage } from "../lib/image-security";

const doctors = await getCollection("doctors");
const laureates = doctors.filter((doc) =>
    doc.data.awards?.some((a) => a.name.includes("Nobel Prize")),
);

const seoTitle = "Nobel Laureates in Medicine & Physiology ‚Äî MDRPedia Registry";
const seoDescription =
    "Explore the verified profiles, research impact, and groundbreaking discoveries of Nobel Prize winning physicians. The definitive registry of medical pioneers.";
---

<Layout title={seoTitle} description={seoDescription}>
    <div class="container py-20">
        <header class="text-center mb-16">
            <div
                class="inline-block px-4 py-1 rounded-full bg-yellow-500/10 text-yellow-500 text-sm font-bold mb-4 border border-yellow-500/20"
            >
                PEER-REVIEWED EXCELLENCE
            </div>
            <h1 class="text-5xl font-bold text-white mb-6">
                Nobel Laureates in Medicine
            </h1>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                Celebrating the physicians and researchers who have redefined
                human health through groundbreaking clinical and scientific
                discovery.
            </p>
        </header>

        <!-- SEO Content Block: The Significance of the Nobel Prize -->
        <section
            class="mb-20 p-8 rounded-3xl bg-white/5 border border-white/10"
        >
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                <div class="md:col-span-2">
                    <h2 class="text-2xl font-bold text-white mb-4">
                        The Gold Standard of Medical Discovery
                    </h2>
                    <p class="text-gray-400 leading-relaxed mb-4">
                        The Nobel Prize in Physiology or Medicine is the world's
                        most prestigious award for medical contribution. At
                        MDRPedia, we verify these profiles through the official
                        Nobel Foundation records, cross-referencing their
                        award-winning research with modern citation impact
                        (H-Index).
                    </p>
                    <p class="text-gray-400 leading-relaxed">
                        These individuals represent the "TITAN" tier of our
                        registry‚Äîdoctors whose work has not just treated
                        patients, but has fundamentally altered the paradigm of
                        clinical practice globally.
                    </p>
                </div>
                <div class="flex flex-col justify-center">
                    <div
                        class="p-4 border-l-2 border-yellow-500 bg-yellow-500/5"
                    >
                        <span class="block text-3xl font-bold text-white mb-1"
                            >{laureates.length}</span
                        >
                        <span
                            class="text-xs text-yellow-500 font-bold uppercase tracking-widest"
                            >Verified Laureates in Registry</span
                        >
                    </div>
                </div>
            </div>
        </section>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                laureates.map((doc) => (
                    <a
                        href={`/doctors/${doc.slug}`}
                        class="group relative flex flex-col bg-[#1a052e] border border-yellow-500/30 rounded-2xl overflow-hidden hover:border-yellow-500/60 transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_0_30px_rgba(255,215,0,0.15)]"
                    >
                        <div class="aspect-[4/3] overflow-hidden">
                            {doc.data.portraitUrl ? (
                                <img
                                    src={getSignedImage(doc.data.portraitUrl, {
                                        width: 600,
                                        height: 450,
                                        gravity: "face",
                                        crop: "fill",
                                    })}
                                    alt={`Portrait of ${doc.data.fullName}, Nobel Laureate`}
                                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                />
                            ) : (
                                <div class="w-full h-full bg-gray-800 flex items-center justify-center">
                                    <span class="text-4xl">üèõÔ∏è</span>
                                </div>
                            )}
                            <div class="absolute inset-0 bg-gradient-to-t from-[#1a052e] to-transparent opacity-80" />
                        </div>

                        <div class="absolute top-4 right-4">
                            <TierBadge tier="TITAN" size="sm" />
                        </div>

                        <div class="p-6 relative">
                            <div class="mb-4">
                                <span class="text-yellow-400 text-xs font-bold tracking-wider uppercase border border-yellow-500/30 px-2 py-1 rounded">
                                    Nobel Prize{" "}
                                    {
                                        doc.data.awards?.find((a) =>
                                            a.name.includes("Nobel Prize"),
                                        )?.year
                                    }
                                </span>
                            </div>
                            <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-yellow-400 transition-colors">
                                {doc.data.fullName}
                            </h3>
                            <p class="text-gray-400 mb-4 line-clamp-2 text-sm">
                                {doc.data.bio}
                            </p>

                            <div class="flex items-center text-sm text-yellow-500/80 font-medium mt-auto">
                                View Full Scientific Profile{" "}
                                <span class="ml-2 group-hover:translate-x-1 transition-transform">
                                    ‚Üí
                                </span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <!-- SEO Footer Block -->
        <section class="mt-20 border-t border-white/5 pt-16">
            <h2 class="text-xl font-bold text-white mb-6">
                Frequently Asked Questions
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                    <h3 class="text-white font-semibold mb-2">
                        How are Nobel Laureates verified on MDRPedia?
                    </h3>
                    <p class="text-sm text-gray-500">
                        We verify all laureates using the official Nobel Prize
                        database (NobelPrize.org) and match them against their
                        unique scientific identifiers (ORCiD/Scopus) to ensure
                        data integrity.
                    </p>
                </div>
                <div>
                    <h3 class="text-white font-semibold mb-2">
                        Are all Nobel winners in medicine listed?
                    </h3>
                    <p class="text-sm text-gray-500">
                        Our registry focus is on pioneers with significant
                        clinical or public health impact. While we ingest all
                        medical laureates, we prioritize those with active
                        research citations and modern clinical relevance.
                    </p>
                </div>
            </div>
        </section>
    </div>
</Layout>
