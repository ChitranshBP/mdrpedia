---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import TierBadge from "../components/TierBadge.astro";
import { getSignedImage } from "../lib/image-security";

const doctors = await getCollection("doctors");
const laureates = doctors.filter((doc) =>
    doc.data.awards?.some((a) => a.name.includes("Nobel Prize")),
);

// Sort by most recent Nobel Prize year
const sortedLaureates = laureates.sort((a, b) => {
    const yearA = a.data.awards?.find(a => a.name.includes("Nobel Prize"))?.year || 0;
    const yearB = b.data.awards?.find(a => a.name.includes("Nobel Prize"))?.year || 0;
    return yearB - yearA;
});

const seoTitle = "Nobel Laureates in Medicine & Physiology — MDRPedia Registry";
const seoDescription =
    "Explore the verified profiles, research impact, and groundbreaking discoveries of Nobel Prize winning physicians. The definitive registry of medical pioneers.";
---

<Layout title={seoTitle} description={seoDescription}>
    <div class="nobel-page">
        <!-- Ambient Background -->
        <div class="page-bg">
            <div class="bg-gradient"></div>
            <div class="bg-grid"></div>
            <div class="bg-orb bg-orb--1"></div>
            <div class="bg-orb bg-orb--2"></div>
        </div>

        <div class="container">
            <!-- Hero Section -->
            <header class="page-header">
                <div class="header-badge">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                    </svg>
                    <span>PEER-REVIEWED EXCELLENCE</span>
                </div>

                <h1 class="header-title">
                    Nobel Laureates in Medicine
                </h1>

                <p class="header-subtitle">
                    Celebrating the physicians and researchers who have redefined
                    human health through groundbreaking clinical and scientific discovery.
                </p>

                <!-- Stats -->
                <div class="header-stats">
                    <div class="stat-box">
                        <span class="stat-value">{sortedLaureates.length}</span>
                        <span class="stat-label">Verified Laureates</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-box">
                        <span class="stat-value">TITAN</span>
                        <span class="stat-label">Tier Classification</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-box">
                        <span class="stat-value">100%</span>
                        <span class="stat-label">Verified Profiles</span>
                    </div>
                </div>
            </header>

            <!-- Introduction Section -->
            <section class="intro-section">
                <div class="intro-content">
                    <h2>The Gold Standard of Medical Discovery</h2>
                    <p>
                        The Nobel Prize in Physiology or Medicine is the world's
                        most prestigious award for medical contribution. At
                        MDRPedia, we verify these profiles through the official
                        Nobel Foundation records, cross-referencing their
                        award-winning research with modern citation impact.
                    </p>
                    <p>
                        These individuals represent the "TITAN" tier of our
                        registry—doctors whose work has not just treated
                        patients, but has fundamentally altered the paradigm of
                        clinical practice globally.
                    </p>
                </div>
                <div class="intro-visual">
                    <div class="medal-icon">
                        <svg viewBox="0 0 64 64" fill="none" stroke="currentColor" stroke-width="1.5">
                            <circle cx="32" cy="38" r="20"/>
                            <path d="M24 6L32 18L40 6"/>
                            <path d="M20 2h24"/>
                            <path d="M32 26v24"/>
                            <path d="M24 38h16"/>
                        </svg>
                    </div>
                    <div class="medal-glow"></div>
                </div>
            </section>

            <!-- Laureates Grid -->
            <section class="laureates-section">
                <h2 class="section-title">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                    <span>Registry of Excellence</span>
                </h2>

                <div class="laureates-grid">
                    {sortedLaureates.map((doc) => {
                        const nobelAward = doc.data.awards?.find((a) => a.name.includes("Nobel Prize"));
                        const initials = doc.data.fullName.split(" ").map((w: string) => w[0]).slice(0, 2).join("").toUpperCase();

                        return (
                            <a href={`/doctors/${doc.id}`} class="laureate-card">
                                <div class="card-glow"></div>
                                <div class="card-image">
                                    {doc.data.portraitUrl ? (
                                        <img
                                            src={getSignedImage(doc.data.portraitUrl, {
                                                width: 600,
                                                height: 450,
                                                gravity: "face",
                                                crop: "fill",
                                            })}
                                            alt={`Portrait of ${doc.data.fullName}, Nobel Laureate`}
                                            loading="lazy"
                                        />
                                    ) : (
                                        <div class="card-initials">
                                            <span>{initials}</span>
                                        </div>
                                    )}
                                    <div class="card-overlay"></div>
                                    <div class="card-tier">
                                        <TierBadge tier="TITAN" size="sm" />
                                    </div>
                                </div>
                                <div class="card-content">
                                    <div class="card-year">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                                        </svg>
                                        <span>Nobel Prize {nobelAward?.year}</span>
                                    </div>
                                    <h3 class="card-name">{doc.data.fullName}</h3>
                                    <p class="card-bio">{doc.data.biography}</p>
                                    <div class="card-link">
                                        <span>View Full Profile</span>
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M5 12h14M12 5l7 7-7 7"/>
                                        </svg>
                                    </div>
                                </div>
                            </a>
                        );
                    })}
                </div>
            </section>

            <!-- Selection Process -->
            <section class="process-section">
                <h2 class="section-title">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                    </svg>
                    <span>The Selection Process</span>
                </h2>

                <div class="process-grid">
                    <div class="process-content">
                        <h3>Inside the Karolinska Institute</h3>
                        <p>
                            The process of selecting a Nobel Laureate begins long
                            before the October announcement. In September of the
                            preceding year, the Nobel Committee sends confidential
                            invitations to qualified nominators—members of the Nobel
                            Assembly, previous Laureates, and professors at selected
                            universities worldwide. No one can nominate themselves.
                        </p>
                        <p>
                            Candidates are then screened by the Nobel Assembly at
                            the Karolinska Institute in Sweden. The key criterion is
                            not a lifetime of good service, but a <strong>"discovery or improvement that has conferred the
                            greatest benefit on mankind."</strong> This distinction is crucial: a great surgeon may save thousands
                            of lives, but a Laureate discovers the mechanism that allows <em>millions</em> to be saved.
                        </p>
                    </div>

                    <div class="timeline-card">
                        <h4>A Century of Progress</h4>
                        <ul class="timeline-list">
                            <li>
                                <span class="timeline-year">1901</span>
                                <span class="timeline-text">Emil von Behring for serum therapy against Diphtheria</span>
                            </li>
                            <li>
                                <span class="timeline-year">1945</span>
                                <span class="timeline-text">Fleming, Chain, and Florey for the discovery of Penicillin</span>
                            </li>
                            <li>
                                <span class="timeline-year">1962</span>
                                <span class="timeline-text">Crick, Watson, and Wilkins for the structure of DNA</span>
                            </li>
                            <li>
                                <span class="timeline-year">2023</span>
                                <span class="timeline-text">Karikó and Weissman for mRNA vaccine technology</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>

            <!-- Why This Matters -->
            <section class="importance-section">
                <div class="importance-card">
                    <div class="importance-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                            <polyline points="22 4 12 14.01 9 11.01"/>
                        </svg>
                    </div>
                    <div class="importance-content">
                        <h3>Why This Matters to Patients</h3>
                        <p>
                            When you see a "Nobel Laureate" badge on an MDRPedia
                            profile, you are looking at a scientist whose work is
                            foundational to modern medicine. These individuals often
                            lead advanced clinical trials and are at the absolute
                            cutting edge of therapeutic possibilities.
                        </p>
                        <p>
                            For patients with rare or "incurable" conditions,
                            seeking care at an institution led by a Laureate can
                            offer access to experimental protocols years before they
                            become standard practice.
                        </p>
                    </div>
                </div>
            </section>

            <!-- FAQ Section -->
            <section class="faq-section">
                <h2 class="section-title">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                        <line x1="12" y1="17" x2="12.01" y2="17"/>
                    </svg>
                    <span>Frequently Asked Questions</span>
                </h2>

                <div class="faq-grid">
                    <div class="faq-item">
                        <h4>How are Nobel Laureates verified on MDRPedia?</h4>
                        <p>
                            We verify all laureates using the official Nobel Prize
                            database (NobelPrize.org) and match them against their
                            unique scientific identifiers (ORCiD/Scopus) to ensure
                            data integrity.
                        </p>
                    </div>
                    <div class="faq-item">
                        <h4>Are all Nobel winners in medicine listed?</h4>
                        <p>
                            Our registry focus is on pioneers with significant
                            clinical or public health impact. While we ingest all
                            medical laureates, we prioritize those with active
                            research citations and modern clinical relevance.
                        </p>
                    </div>
                </div>
            </section>
        </div>
    </div>
</Layout>

<style>
    .nobel-page {
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

    /* Background */
    .page-bg {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: 0;
    }

    .bg-gradient {
        position: absolute;
        top: -300px;
        left: 50%;
        transform: translateX(-50%);
        width: 1000px;
        height: 600px;
        background: radial-gradient(ellipse, rgba(255, 215, 0, 0.08) 0%, transparent 70%);
        filter: blur(80px);
    }

    .bg-grid {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(255, 215, 0, 0.02) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255, 215, 0, 0.02) 1px, transparent 1px);
        background-size: 60px 60px;
        mask-image: linear-gradient(to bottom, transparent, black 20%, black 80%, transparent);
    }

    .bg-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        animation: float 25s ease-in-out infinite;
    }

    .bg-orb--1 {
        width: 500px;
        height: 500px;
        background: rgba(255, 215, 0, 0.06);
        top: 20%;
        right: -200px;
    }

    .bg-orb--2 {
        width: 400px;
        height: 400px;
        background: rgba(255, 170, 0, 0.04);
        bottom: 10%;
        left: -150px;
        animation-delay: -12s;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-40px) scale(1.05); }
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1.5rem;
        position: relative;
        z-index: 1;
    }

    /* Header */
    .page-header {
        text-align: center;
        padding: 100px 0 60px;
    }

    .header-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        background: rgba(255, 215, 0, 0.08);
        border: 1px solid rgba(255, 215, 0, 0.2);
        border-radius: 100px;
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.15em;
        color: #ffd700;
        margin-bottom: 24px;
    }

    .header-badge svg {
        width: 14px;
        height: 14px;
    }

    .header-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        background: linear-gradient(135deg, #fff 0%, #ffd700 50%, #ffaa00 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 20px;
        letter-spacing: -0.03em;
    }

    .header-subtitle {
        font-size: 1.15rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto 40px;
        line-height: 1.7;
    }

    .header-stats {
        display: inline-flex;
        align-items: center;
        gap: 32px;
        padding: 20px 40px;
        background: rgba(255, 215, 0, 0.03);
        border: 1px solid rgba(255, 215, 0, 0.1);
        border-radius: 16px;
    }

    .stat-box {
        text-align: center;
    }

    .stat-value {
        display: block;
        font-size: 1.5rem;
        font-weight: 800;
        color: #ffd700;
        font-family: var(--font-mono);
    }

    .stat-label {
        font-size: 0.7rem;
        color: var(--text-muted);
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    .stat-divider {
        width: 1px;
        height: 40px;
        background: rgba(255, 215, 0, 0.15);
    }

    /* Introduction Section */
    .intro-section {
        display: grid;
        grid-template-columns: 1fr 280px;
        gap: 48px;
        padding: 48px;
        background: rgba(255, 215, 0, 0.02);
        border: 1px solid rgba(255, 215, 0, 0.08);
        border-radius: 24px;
        margin-bottom: 64px;
    }

    .intro-content h2 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 20px;
    }

    .intro-content p {
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 16px;
    }

    .intro-content p:last-child {
        margin-bottom: 0;
    }

    .intro-visual {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .medal-icon {
        width: 120px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 215, 0, 0.08);
        border: 2px solid rgba(255, 215, 0, 0.2);
        border-radius: 50%;
        position: relative;
        z-index: 1;
    }

    .medal-icon svg {
        width: 60px;
        height: 60px;
        color: #ffd700;
    }

    .medal-glow {
        position: absolute;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, rgba(255, 215, 0, 0.15) 0%, transparent 70%);
        border-radius: 50%;
    }

    /* Section Title */
    .section-title {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 32px;
    }

    .section-title svg {
        width: 24px;
        height: 24px;
        color: #ffd700;
    }

    /* Laureates Grid */
    .laureates-section {
        margin-bottom: 80px;
    }

    .laureates-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
    }

    .laureate-card {
        position: relative;
        background: linear-gradient(145deg, rgba(30, 30, 45, 0.8), rgba(20, 20, 35, 0.6));
        border: 1px solid rgba(255, 215, 0, 0.12);
        border-radius: 20px;
        overflow: hidden;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .laureate-card:hover {
        border-color: rgba(255, 215, 0, 0.4);
        transform: translateY(-6px);
        box-shadow: 0 30px 60px -20px rgba(255, 215, 0, 0.15);
    }

    .card-glow {
        position: absolute;
        top: -100px;
        right: -100px;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, rgba(255, 215, 0, 0.1) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.4s;
    }

    .laureate-card:hover .card-glow {
        opacity: 1;
    }

    .card-image {
        position: relative;
        aspect-ratio: 4/3;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .laureate-card:hover .card-image img {
        transform: scale(1.05);
    }

    .card-initials {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 170, 0, 0.05));
    }

    .card-initials span {
        font-size: 3rem;
        font-weight: 700;
        color: rgba(255, 215, 0, 0.4);
    }

    .card-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(to top, rgba(20, 20, 35, 0.9) 0%, transparent 60%);
    }

    .card-tier {
        position: absolute;
        top: 16px;
        right: 16px;
    }

    .card-content {
        padding: 24px;
    }

    .card-year {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: rgba(255, 215, 0, 0.1);
        border: 1px solid rgba(255, 215, 0, 0.2);
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 600;
        color: #ffd700;
        margin-bottom: 16px;
    }

    .card-year svg {
        width: 12px;
        height: 12px;
    }

    .card-name {
        font-size: 1.35rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 12px;
        transition: color 0.3s;
    }

    .laureate-card:hover .card-name {
        color: #ffd700;
    }

    .card-bio {
        font-size: 0.9rem;
        color: var(--text-muted);
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 16px;
    }

    .card-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        color: rgba(255, 215, 0, 0.8);
        transition: color 0.2s, gap 0.2s;
    }

    .card-link svg {
        width: 16px;
        height: 16px;
    }

    .laureate-card:hover .card-link {
        color: #ffd700;
        gap: 12px;
    }

    /* Process Section */
    .process-section {
        margin-bottom: 80px;
    }

    .process-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 32px;
    }

    .process-content h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 20px;
    }

    .process-content p {
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 16px;
    }

    .process-content strong {
        color: #ffd700;
    }

    .process-content em {
        color: #fff;
        font-style: italic;
    }

    .timeline-card {
        background: rgba(255, 215, 0, 0.03);
        border: 1px solid rgba(255, 215, 0, 0.1);
        border-radius: 16px;
        padding: 28px;
    }

    .timeline-card h4 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffd700;
        margin-bottom: 20px;
    }

    .timeline-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .timeline-list li {
        display: flex;
        gap: 16px;
        padding: 12px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .timeline-list li:last-child {
        border-bottom: none;
    }

    .timeline-year {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        font-weight: 700;
        color: #ffd700;
        width: 50px;
        flex-shrink: 0;
    }

    .timeline-text {
        font-size: 0.9rem;
        color: var(--text-secondary);
        line-height: 1.5;
    }

    /* Importance Section */
    .importance-section {
        margin-bottom: 80px;
    }

    .importance-card {
        display: flex;
        gap: 28px;
        padding: 36px;
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.05), rgba(255, 170, 0, 0.02));
        border: 1px solid rgba(255, 215, 0, 0.12);
        border-radius: 20px;
    }

    .importance-icon {
        flex-shrink: 0;
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 215, 0, 0.1);
        border: 1px solid rgba(255, 215, 0, 0.2);
        border-radius: 16px;
    }

    .importance-icon svg {
        width: 28px;
        height: 28px;
        color: #ffd700;
    }

    .importance-content h3 {
        font-size: 1.35rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 16px;
    }

    .importance-content p {
        color: var(--text-secondary);
        line-height: 1.7;
        margin-bottom: 12px;
    }

    .importance-content p:last-child {
        margin-bottom: 0;
    }

    /* FAQ Section */
    .faq-section {
        padding-bottom: 80px;
        border-top: 1px solid rgba(255, 255, 255, 0.04);
        padding-top: 48px;
    }

    .faq-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 24px;
    }

    .faq-item {
        padding: 24px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 14px;
    }

    .faq-item h4 {
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 12px;
    }

    .faq-item p {
        font-size: 0.9rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .intro-section {
            grid-template-columns: 1fr;
