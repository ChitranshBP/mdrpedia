        gap: 8px;
        flex-wrap: wrap;
    }

    .filter-btn {
        background: transparent;
        border: 1px solid var(--border-subtle);
        color: var(--text-secondary);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .filter-btn:hover {
        background: rgba(255, 255, 255, 0.05);
        color: var(--text-primary);
    }

    .filter-btn.active {
        background: var(--accent-purple);
        border-color: var(--accent-purple);
        color: white;
    }

    .section-desc {
        color: var(--text-muted);
        font-size: 0.88rem;
        margin-bottom: var(--space-lg);
        margin-top: calc(var(--space-xs) * -1);
    }

    /* Organizations */
    .orgs-section {
        margin-bottom: var(--space-2xl);
    }
    .orgs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 16px;
    }
    .org-card {
        padding: 20px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border-subtle);
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        transition: border-color 0.15s;
    }
    .org-card:hover {
        border-color: rgba(139, 92, 246, 0.3);
    }
    .org-card__header {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 12px;
    }
    .org-card__icon {
        font-size: 1.8rem;
        flex-shrink: 0;
    }
    .org-card__name {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1.3;
    }
    .org-card__abbr {
        font-size: 0.72rem;
        font-weight: 600;
        color: var(--accent-purple);
        letter-spacing: 0.05em;
    }
    .org-card__desc {
        font-size: 0.82rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 12px;
        flex: 1;
    }
    .org-card__tags {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        margin-bottom: 12px;
    }
    .org-tag {
        font-size: 0.68rem;
        font-weight: 500;
        padding: 2px 8px;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 3px;
        color: var(--text-muted);
    }
    .org-card__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 10px;
        border-top: 1px solid rgba(255, 255, 255, 0.04);
    }
    .org-card__count {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-weight: 500;
    }
    .org-card__link {
        font-size: 0.78rem;
        font-weight: 600;
        color: var(--accent-purple);
        text-decoration: none;
    }
    .org-card__link:hover {
        text-decoration: underline;
    }

    /* Specialty Communities */
    .spec-section {
        margin-bottom: var(--space-2xl);
    }
    .spec-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 14px;
    }
    .spec-card {
        padding: 18px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border-subtle);
        border-radius: 10px;
        transition: border-color 0.15s;
    }
    .spec-card:hover {
        border-color: rgba(139, 92, 246, 0.3);
    }
    .spec-card__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 14px;
    }
    .spec-card__name {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--text-primary);
    }
    .spec-card__count {
        font-size: 0.7rem;
        font-weight: 500;
        color: var(--text-muted);
        background: rgba(255, 255, 255, 0.04);
        padding: 3px 8px;
        border-radius: 4px;
    }
    .spec-card__head {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        margin-bottom: 12px;
    }
    .spec-card__avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(139, 92, 246, 0.1);
        border: 1px solid rgba(139, 92, 246, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.75rem;
        color: var(--accent-purple);
        flex-shrink: 0;
    }
    .spec-card__head-info {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        gap: 1px;
    }
    .spec-card__head-label {
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-muted);
    }
    .spec-card__head-name {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-primary);
        text-decoration: none;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .spec-card__head-name:hover {
        color: var(--accent-purple);
    }
    .spec-card__head-meta {
        font-size: 0.7rem;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        gap: 4px;
    }
    .spec-card__members {
        display: flex;
        gap: 6px;
        align-items: center;
    }
    .spec-member {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--border-subtle);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.6rem;
        font-weight: 700;
        color: var(--text-muted);
        text-decoration: none;
        transition: border-color 0.15s;
    }
    .spec-member:hover {
        border-color: var(--accent-purple);
        color: var(--accent-purple);
    }
    .spec-more {
        font-size: 0.7rem;
        color: var(--text-muted);
        margin-left: 4px;
    }

    @media (max-width: 600px) {
        .orgs-grid {
            grid-template-columns: 1fr;
        }
        .spec-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
