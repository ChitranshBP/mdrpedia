---
/**
 * MDRPedia — Communities & Organizations
 * Real medical organizations + specialty groupings
 */
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import TierBadge from "../components/TierBadge.astro";

const allDoctors = await getCollection("doctors");
const communityEntries = await getCollection("communities");

const staticCommunities = communityEntries.map((c) => c.data);

// Enrich organizations with doctor counts
const orgsWithCounts = staticCommunities.map((org) => {
    const count = allDoctors.filter((d) => {
        const spec = (d.data.specialty || "").toLowerCase();
        return org.relatedSpecialties.some((rs) =>
            spec.includes(rs.toLowerCase()),
        );
    }).length;
    return { ...org, doctorCount: count };
});

// Group by region for filter
const regions = Array.from(new Set(staticCommunities.map((c) => c.region)));

// Specialty groupings (existing feature)
const specMap = new Map<string, typeof allDoctors>();
allDoctors.forEach((d) => {
    const s = d.data.specialty;
    if (s && s.length > 2) {
        if (!specMap.has(s)) specMap.set(s, []);
        specMap.get(s)!.push(d);
    }
});

const specialtyCommunities = [...specMap.entries()]
    .filter(([name, members]) => {
        // Skip numeric specialty names (bulk import artifacts)
        if (/^\d+$/.test(name.trim())) return false;
        // Skip names that are just numbers with spaces
        if (/^[\d\s.]+$/.test(name.trim())) return false;
        // Skip single-character or extremely short names
        if (name.trim().length < 3) return false;
        // Require minimum community size
        return members.length >= 3;
    })
    .sort((a, b) => b[1].length - a[1].length)
    .slice(0, 20)
    .map(([name, members]) => ({
        name,
        count: members.length,
        head: members.sort(
            (a, b) => (b.data.hIndex || 0) - (a.data.hIndex || 0),
        )[0],
        members: members.slice(0, 5),
    }));
---

<Layout
    title="Medical Communities & Organizations — MDRPedia"
    description="Browse medical organizations, specialty communities, and verified professional networks."
>
    <div class="communities-page">
        <header class="page-header">
            <h1>Communities & Organizations</h1>
            <p>
                Medical organizations, specialty communities, and verified
                professional networks in the MDRPedia registry.
            </p>
        </header>

        <!-- Organizations -->
        <section class="orgs-section">
            <div class="section-header-flex">
                <h2 class="section-heading">Medical Organizations</h2>

                <!-- Simple Filter Tabs -->
                <div class="region-filter">
                    <button class="filter-btn active" data-region="All"
                        >All</button
                    >
                    {
                        regions.map((region) => (
                            <button class="filter-btn" data-region={region}>
                                {region}
                            </button>
                        ))
                    }
                </div>
            </div>

            <div class="orgs-grid" id="orgsGrid">
                {
                    orgsWithCounts.map((org) => (
                        <div class="org-card" data-region={org.region}>
                            <div class="org-card__header">
                                <span class="org-card__icon">{org.icon}</span>
                                <div>
                                    <h3 class="org-card__name">{org.name}</h3>
                                    <span class="org-card__abbr">
                                        {org.abbr}
                                    </span>
                                </div>
                            </div>
                            <p class="org-card__desc">{org.desc}</p>
                            <div class="org-card__tags">
                                {org.relatedSpecialties.slice(0, 3).map((s) => (
                                    <span class="org-tag">{s}</span>
                                ))}
                            </div>
                            <div class="org-card__footer">
                                <span class="org-card__count">
                                    {org.doctorCount} related profiles
                                </span>
                                <a
                                    href={org.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="org-card__link"
                                >
                                    Visit Website ↗
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>

            <div
                id="noResults"
                style="display:none; text-align:center; padding: 40px; color: var(--text-muted);"
            >
                No organizations found for this region.
            </div>
        </section>

        <!-- Specialty Communities -->
        <section class="spec-section">
            <h2 class="section-heading">Specialty Communities</h2>
            <p class="section-desc">
                Communities of verified professionals grouped by medical
                specialty. Each community is led by the highest-ranked authority
                in that field.
            </p>
            <div class="spec-grid">
                {
                    specialtyCommunities.map((community) => (
                        <div class="spec-card">
                            <div class="spec-card__header">
                                <h3 class="spec-card__name">
                                    {community.name}
                                </h3>
                                <span class="spec-card__count">
                                    {community.count} members
                                </span>
                            </div>
                            <div class="spec-card__head">
                                <div class="spec-card__avatar">
                                    {community.head.data.fullName
                                        .split(" ")
                                        .map((w: string) => w[0])
                                        .filter((_: string, i: number) => i < 2)
                                        .join("")
                                        .toUpperCase()}
                                </div>
                                <div class="spec-card__head-info">
                                    <span class="spec-card__head-label">
                                        Community Head
                                    </span>
                                    <a
                                        href={`/doctors/${community.head.id}`}
                                        class="spec-card__head-name"
                                    >
                                        {community.head.data.fullName}
                                    </a>
                                    <span class="spec-card__head-meta">
                                        H-index: {community.head.data.hIndex} ·
                                        <TierBadge
                                            tier={
                                                community.head.data.tier as
                                                    | "TITAN"
                                                    | "ELITE"
                                                    | "MASTER"
                                                    | "UNRANKED"
                                            }
                                            size="sm"
                                        />
                                    </span>
                                </div>
                            </div>
                            <div class="spec-card__members">
                                {community.members.slice(1, 4).map((m) => (
                                    <a
                                        href={`/doctors/${m.id}`}
                                        class="spec-member"
                                        title={m.data.fullName}
                                    >
                                        {m.data.fullName
                                            .split(" ")
                                            .map((w: string) => w[0])
                                            .filter(
                                                (_: string, i: number) => i < 2,
                                            )
                                            .join("")
                                            .toUpperCase()}
                                    </a>
                                ))}
                                {community.count > 4 && (
                                    <span class="spec-more">
                                        +{community.count - 4}
                                    </span>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>
    </div>
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll(".filter-btn");
        const cards = document.querySelectorAll(".org-card");
        const noResults = document.getElementById("noResults");
        const grid = document.getElementById("orgsGrid");

        buttons.forEach((btn) => {
            btn.addEventListener("click", () => {
                // Update active state
                buttons.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");

                const region = btn.getAttribute("data-region");
                let visibleCount = 0;

                cards.forEach((card) => {
                    const cardRegion = card.getAttribute("data-region");
                    if (region === "All" || cardRegion === region) {
                        (card as HTMLElement).style.display = "flex";
                        visibleCount++;
                    } else {
                        (card as HTMLElement).style.display = "none";
                    }
                });

                if (visibleCount === 0) {
                    if (noResults) noResults.style.display = "block";
                    if (grid) grid.style.display = "none";
                } else {
                    if (noResults) noResults.style.display = "none";
                    if (grid) grid.style.display = "grid";
                }
            });
        });
    });
</script>

<style>
    .communities-page {
        max-width: 1000px;
        margin: 0 auto;
        padding: var(--space-xl) var(--space-lg);
    }
    .page-header {
        text-align: center;
        margin-bottom: var(--space-2xl);
    }
    .page-header h1 {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: var(--space-xs);
    }
    .page-header p {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .section-header-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
        margin-bottom: var(--space-md);
