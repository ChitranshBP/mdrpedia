---
/**
 * MDRPedia â€” Communities & Organizations
 * Real medical organizations + specialty groupings
 */
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import TierBadge from "../components/TierBadge.astro";

const allDoctors = await getCollection("doctors");

// Medical Organizations
const organizations = [
    {
        name: "World Health Organization",
        abbr: "WHO",
        icon: "ðŸŒ",
        desc: "The United Nations agency directing and coordinating international health policy, disease response, and global public health standards.",
        url: "https://www.who.int",
        relatedSpecialties: [
            "Public Health",
            "Epidemiology",
            "Infectious Disease",
            "Global Health",
        ],
    },
    {
        name: "American Heart Association",
        abbr: "AHA",
        icon: "â¤ï¸",
        desc: "Leading nonprofit funding cardiovascular and cerebrovascular disease research. Publisher of Circulation and the ACLS/BLS guidelines.",
        url: "https://www.heart.org",
        relatedSpecialties: [
            "Cardiology",
            "Cardiovascular Surgery",
            "Clinical Cardiology",
            "Vascular Medicine",
        ],
    },
    {
        name: "American Medical Association",
        abbr: "AMA",
        icon: "âš•ï¸",
        desc: "The largest association of physicians and medical students in the United States, advocating for the medical profession and public health.",
        url: "https://www.ama-assn.org",
        relatedSpecialties: [
            "Internal Medicine",
            "Family Medicine",
            "General Practice",
        ],
    },
    {
        name: "National Institutes of Health",
        abbr: "NIH",
        icon: "ðŸ”¬",
        desc: "The primary U.S. federal agency for biomedical and public health research, comprising 27 institutes and centers.",
        url: "https://www.nih.gov",
        relatedSpecialties: [
            "Genomics",
            "Immunology",
            "Biomedical Research",
            "Molecular Biology",
        ],
    },
    {
        name: "American College of Surgeons",
        abbr: "ACS",
        icon: "ðŸ¥",
        desc: "Scientific and educational organization of surgeons dedicated to improving surgical care through standards, education, and trauma verification.",
        url: "https://www.facs.org",
        relatedSpecialties: [
            "Surgery",
            "Neurosurgery",
            "Transplant Surgery",
            "Cardiac Surgery",
        ],
    },
    {
        name: "Royal College of Physicians",
        abbr: "RCP",
        icon: "ðŸ‘‘",
        desc: "The oldest medical college in England, setting standards in clinical practice, education, and quality improvement since 1518.",
        url: "https://www.rcplondon.ac.uk",
        relatedSpecialties: [
            "Internal Medicine",
            "Geriatrics",
            "Respiratory Medicine",
        ],
    },
    {
        name: "MÃ©decins Sans FrontiÃ¨res",
        abbr: "MSF",
        icon: "ðŸ†˜",
        desc: "Nobel Prize-winning international humanitarian medical organization providing aid in armed conflicts, epidemics, and natural disasters.",
        url: "https://www.msf.org",
        relatedSpecialties: [
            "Emergency Medicine",
            "Infectious Disease",
            "Trauma Surgery",
            "Humanitarian Medicine",
        ],
    },
    {
        name: "American Cancer Society",
        abbr: "ACS",
        icon: "ðŸŽ—ï¸",
        desc: "Nationwide health organization funding cancer research, providing patient services, and leading evidence-based prevention programs.",
        url: "https://www.cancer.org",
        relatedSpecialties: [
            "Oncology",
            "Surgical Oncology",
            "Radiation Oncology",
            "Hematology",
        ],
    },
];

// Count related doctors for each org
const orgsWithCounts = organizations.map((org) => {
    const count = allDoctors.filter((d) => {
        const spec = (d.data.specialty || "").toLowerCase();
        return org.relatedSpecialties.some((rs) =>
            spec.includes(rs.toLowerCase()),
        );
    }).length;
    return { ...org, doctorCount: count };
});

// Specialty groupings (existing feature)
const specMap = new Map<string, typeof allDoctors>();
allDoctors.forEach((d) => {
    const s = d.data.specialty;
    if (s && s.length > 2) {
        if (!specMap.has(s)) specMap.set(s, []);
        specMap.get(s)!.push(d);
    }
});

const communities = [...specMap.entries()]
    .filter(([, members]) => members.length >= 3)
    .sort((a, b) => b[1].length - a[1].length)
    .slice(0, 20)
    .map(([name, members]) => ({
        name,
        count: members.length,
        head: members.sort(
            (a, b) => (b.data.hIndex || 0) - (a.data.hIndex || 0),
        )[0],
        members: members.slice(0, 5),
    }));
---

<Layout
    title="Medical Communities & Organizations â€” MDRPedia"
    description="Browse medical organizations, specialty communities, and verified professional networks."
>
    <div class="communities-page">
        <header class="page-header">
            <h1>Communities & Organizations</h1>
            <p>
                Medical organizations, specialty communities, and verified
                professional networks in the MDRPedia registry.
            </p>
        </header>

        <!-- Organizations -->
        <section class="orgs-section">
            <h2 class="section-heading">Medical Organizations</h2>
            <div class="orgs-grid">
                {
                    orgsWithCounts.map((org) => (
                        <div class="org-card">
                            <div class="org-card__header">
                                <span class="org-card__icon">{org.icon}</span>
                                <div>
                                    <h3 class="org-card__name">{org.name}</h3>
                                    <span class="org-card__abbr">
                                        {org.abbr}
                                    </span>
                                </div>
                            </div>
                            <p class="org-card__desc">{org.desc}</p>
                            <div class="org-card__tags">
                                {org.relatedSpecialties.slice(0, 3).map((s) => (
                                    <span class="org-tag">{s}</span>
                                ))}
                            </div>
                            <div class="org-card__footer">
                                <span class="org-card__count">
                                    {org.doctorCount} related profiles
                                </span>
                                <a
                                    href={org.url}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="org-card__link"
                                >
                                    Visit Website â†—
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Specialty Communities -->
        <section class="spec-section">
            <h2 class="section-heading">Specialty Communities</h2>
            <p class="section-desc">
                Communities of verified professionals grouped by medical
                specialty. Each community is led by the highest-ranked authority
                in that field.
            </p>
            <div class="spec-grid">
                {
                    communities.map((community) => (
                        <div class="spec-card">
                            <div class="spec-card__header">
                                <h3 class="spec-card__name">
                                    {community.name}
                                </h3>
                                <span class="spec-card__count">
                                    {community.count} members
                                </span>
                            </div>
                            <div class="spec-card__head">
                                <div class="spec-card__avatar">
                                    {community.head.data.fullName
                                        .split(" ")
                                        .map((w: string) => w[0])
                                        .filter((_: string, i: number) => i < 2)
                                        .join("")
                                        .toUpperCase()}
                                </div>
                                <div class="spec-card__head-info">
                                    <span class="spec-card__head-label">
                                        Community Head
                                    </span>
                                    <a
                                        href={`/doctors/${community.head.id}`}
                                        class="spec-card__head-name"
                                    >
                                        {community.head.data.fullName}
                                    </a>
                                    <span class="spec-card__head-meta">
                                        H-index: {community.head.data.hIndex} Â·
                                        <TierBadge
                                            tier={
                                                community.head.data.tier as
                                                    | "TITAN"
                                                    | "ELITE"
                                                    | "MASTER"
                                                    | "UNRANKED"
                                            }
                                            size="sm"
                                        />
                                    </span>
                                </div>
                            </div>
                            <div class="spec-card__members">
                                {community.members.slice(1, 4).map((m) => (
                                    <a
                                        href={`/doctors/${m.id}`}
                                        class="spec-member"
                                        title={m.data.fullName}
                                    >
                                        {m.data.fullName
                                            .split(" ")
                                            .map((w: string) => w[0])
                                            .filter(
                                                (_: string, i: number) => i < 2,
                                            )
                                            .join("")
                                            .toUpperCase()}
                                    </a>
                                ))}
                                {community.count > 4 && (
                                    <span class="spec-more">
                                        +{community.count - 4}
                                    </span>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>
    </div>
</Layout>

<style>
    .communities-page {
        max-width: 1000px;
        margin: 0 auto;
        padding: var(--space-xl) var(--space-lg);
    }
    .page-header {
        text-align: center;
        margin-bottom: var(--space-2xl);
    }
    .page-header h1 {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: var(--space-xs);
    }
    .page-header p {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }
    .section-heading {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: var(--space-md);
        padding-bottom: var(--space-xs);
        border-bottom: 1px solid var(--border-subtle);
    }
    .section-desc {
        color: var(--text-muted);
        font-size: 0.88rem;
        margin-bottom: var(--space-lg);
        margin-top: calc(var(--space-xs) * -1);
    }

    /* Organizations */
    .orgs-section {
        margin-bottom: var(--space-2xl);
    }
    .orgs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 16px;
    }
    .org-card {
        padding: 20px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border-subtle);
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        transition: border-color 0.15s;
    }
    .org-card:hover {
        border-color: rgba(139, 92, 246, 0.3);
    }
    .org-card__header {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 12px;
    }
    .org-card__icon {
        font-size: 1.8rem;
        flex-shrink: 0;
    }
    .org-card__name {
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1.3;
    }
    .org-card__abbr {
        font-size: 0.72rem;
        font-weight: 600;
        color: var(--accent-purple);
        letter-spacing: 0.05em;
    }
    .org-card__desc {
        font-size: 0.82rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 12px;
        flex: 1;
    }
    .org-card__tags {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        margin-bottom: 12px;
    }
    .org-tag {
        font-size: 0.68rem;
        font-weight: 500;
        padding: 2px 8px;
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 3px;
        color: var(--text-muted);
    }
    .org-card__footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 10px;
        border-top: 1px solid rgba(255, 255, 255, 0.04);
    }
    .org-card__count {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-weight: 500;
    }
    .org-card__link {
        font-size: 0.78rem;
        font-weight: 600;
        color: var(--accent-purple);
        text-decoration: none;
    }
    .org-card__link:hover {
        text-decoration: underline;
    }

    /* Specialty Communities */
    .spec-section {
        margin-bottom: var(--space-2xl);
    }
    .spec-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 14px;
    }
    .spec-card {
        padding: 18px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border-subtle);
        border-radius: 10px;
        transition: border-color 0.15s;
    }
    .spec-card:hover {
        border-color: rgba(139, 92, 246, 0.3);
    }
    .spec-card__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 14px;
    }
    .spec-card__name {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--text-primary);
    }
    .spec-card__count {
        font-size: 0.7rem;
        font-weight: 500;
        color: var(--text-muted);
        background: rgba(255, 255, 255, 0.04);
        padding: 3px 8px;
        border-radius: 4px;
    }
    .spec-card__head {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        margin-bottom: 12px;
    }
    .spec-card__avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(139, 92, 246, 0.1);
        border: 1px solid rgba(139, 92, 246, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.75rem;
        color: var(--accent-purple);
        flex-shrink: 0;
    }
    .spec-card__head-info {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        gap: 1px;
    }
    .spec-card__head-label {
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-muted);
    }
    .spec-card__head-name {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-primary);
        text-decoration: none;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .spec-card__head-name:hover {
        color: var(--accent-purple);
    }
    .spec-card__head-meta {
        font-size: 0.7rem;
        color: var(--text-muted);
        display: flex;
        align-items: center;
        gap: 4px;
    }
    .spec-card__members {
        display: flex;
        gap: 6px;
        align-items: center;
    }
    .spec-member {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--border-subtle);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.6rem;
        font-weight: 700;
        color: var(--text-muted);
        text-decoration: none;
        transition: border-color 0.15s;
    }
    .spec-member:hover {
        border-color: var(--accent-purple);
        color: var(--accent-purple);
    }
    .spec-more {
        font-size: 0.7rem;
        color: var(--text-muted);
        margin-left: 4px;
    }

    @media (max-width: 600px) {
        .orgs-grid {
            grid-template-columns: 1fr;
        }
        .spec-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
