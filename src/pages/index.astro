---
/**
 * MDRPedia â€” Homepage
 * Search-first design with live feed of recently verified doctors
 */

import Layout from "../layouts/Layout.astro";
import TierBadge from "../components/TierBadge.astro";
import { getCollection } from "astro:content";

// Dynamic stats from content collection
const allDoctors = await getCollection("doctors");
const verifiedCount = allDoctors.filter(
	(d) => d.data.tier !== "UNRANKED",
).length;
const titanCount = allDoctors.filter((d) => d.data.tier === "TITAN").length;
const citationCount = allDoctors.reduce(
	(sum, d) => sum + (d.data.citations?.length ?? 0),
	0,
);
const countrySet = new Set(allDoctors.map((d) => d.data.geography.country));
const countriesCount = countrySet.size;
const recentDoctors = allDoctors
	.sort((a, b) => {
		// Sort by modification time (approximated here by reverse list order for now,
		// as file system stats aren't exposed in content collection)
		// Or better: sort by tier for quality
		const tierOrder = { TITAN: 0, ELITE: 1, MASTER: 2, UNRANKED: 3 };
		return (tierOrder[a.data.tier] ?? 3) - (tierOrder[b.data.tier] ?? 3);
	})
	.slice(0, 5);

// Build search index at build time
const searchIndex = allDoctors
	.filter(
		(d) =>
			d.data.fullName &&
			d.data.fullName.length > 2 &&
			isNaN(Number(d.data.fullName)),
	)
	.map((d) => ({
		id: d.id,
		n: d.data.fullName,
		s: d.data.specialty || "",
		t: d.data.tier || "UNRANKED",
		c: d.data.geography?.country || "",
		p: d.data.portraitUrl?.startsWith("data:")
			? ""
			: d.data.portraitUrl || "",
	}))
	.slice(0, 500); // Limit for performance
